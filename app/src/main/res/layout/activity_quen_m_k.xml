<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuenMKActivity"
    android:orientation="vertical"
    android:background="#9DE4FA">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUÊN MẬT KHẨU"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#4CA89F"
        android:layout_marginTop="80dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold|italic"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="30dp"
                android:textSize="25dp"
                android:textColor="#333333"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/edtUserQuenMK"
                android:layout_marginTop="30dp"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="Mời nhập email cua ban"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">
            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Gửi mã xác nhận"
                android:background="@drawable/backgroundbtn"
                android:id="@+id/btnGuiMaXacNhanQuenMK"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Thoát"
                android:layout_marginLeft="20dp"
                android:background="@drawable/backgroundbtn"
                android:id="@+id/btnThoatQuenMK"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>