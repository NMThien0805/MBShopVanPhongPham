<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/black"
        android:text="Thêm sản phẩm"
        android:gravity="center"
        android:textSize="16dp"
        android:background="@drawable/bg_yellow_corner"
        ></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/edt_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:background="@drawable/bg_while_corner_gray_border"
            ></EditText>
        <EditText
            android:id="@+id/edt_soluong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="số lượng"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:background="@drawable/bg_while_corner_gray_border"
            ></EditText>
<!--        <EditText-->
<!--            android:id="@+id/edt_loai"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Loại"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:layout_marginRight="5dp"-->
<!--            android:padding="8dp"-->
<!--            android:background="@drawable/bg_while_corner_gray_border"-->
<!--            ></EditText>-->
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại :"
                ></TextView>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <RadioButton
                    android:id="@+id/rbLoai1Them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Sách"></RadioButton>

                <RadioButton
                    android:id="@+id/rbLoai2Them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Truyện"></RadioButton>

                <RadioButton
                    android:id="@+id/rbLoai3Them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Dụng cụ"></RadioButton>
            </RadioGroup>
        </LinearLayout>
        <EditText
            android:id="@+id/edt_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:background="@drawable/bg_while_corner_gray_border"
            ></EditText>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                >
                <Button
                    android:background="@drawable/bg_yellow_corner_button"
                    android:id="@+id/btn_folder"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="thư mục"
                    android:textSize="13dp"
                    ></Button>
                <Button
                    android:id="@+id/btn_camera"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:textSize="13dp"
                    ></Button>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_dia_avatar"
                android:layout_marginLeft="70dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/girl"
                ></ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <Button
            android:background="@drawable/bg_yellow_corner_button"
            android:textAllCaps="false"
            android:id="@+id/btn_xacnhan_dialogthem"
            android:text="Xác nhận"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </Button>
        <Button
            android:textAllCaps="false"
            android:id="@+id/btn_huy_diaglog"
            android:text="Hủy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </Button>
    </LinearLayout>

</LinearLayout>