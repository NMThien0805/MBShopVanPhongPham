<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.fragment.UserFragment"
    android:background="@color/LightBlue"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/LightBlue"
        >
        <ImageView
            android:id="@+id/btn_an_user_frag"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_edit"

            ></ImageView>
        <Button
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/btn_them_user_frag"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_yellow_corner_button"
            android:text="ThÃªm"
            ></Button>
        <ImageView
            android:id="@+id/btn_refesh_user_frag"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/refresh"


            ></ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightBlue2"
        >
        <TextView
            android:textColor="@color/purple_500"
            android:gravity="center"
            style="@style/Base.CardView"
            android:textSize="30dp"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List User"
            >
        </TextView>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rcv_listUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>