<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng"
            android:id="@+id/tvMaDonHangXNDDH"
            android:textSize="18dp"
            android:textColor="#333333"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Số lượng SP"
            android:id="@+id/tvSoLuongSPXNDDH"
            android:textSize="18dp"
            android:textColor="#333333"
            />

    </LinearLayout>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Người mua"
        android:textSize="18dp"
        android:textColor="#333333"
        android:id="@+id/tvIdNguoiMuaXNDDH"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Giá"
        android:textSize="18dp"
        android:textColor="#333333"
        android:id="@+id/tvGiasXNDDDH"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:src="@drawable/logocheck"
        android:id="@+id/imgCheckXNDDH"/>

</LinearLayout>